{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "rootDir": "./",
    "target": "ES2020",
    "module": "es2020",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "include": [
      "src"
    ]
  }
}
